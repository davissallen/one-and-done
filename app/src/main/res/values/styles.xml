<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="WhiteEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlHighlight">#FFFFFF</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <style name="CreateGoalPrompt" parent="AppTheme">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GoalListItem">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ListItemGoal" parent="GoalListItem">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ListItemDate" parent="GoalListItem">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Clock">
        <item name="android:textSize">56sp</item>
        <item name="android:format12Hour">hh:mm a</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ViewGoalGoal">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
